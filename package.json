{
  "name": "image_scanner",
  "version": "6.0.0",
  "description": "",
  "main": "src/main.js",
  "build": {
    "appId": "is_02156143110",
    "copyright": "17zuoye",
    "productName": "image_scanner",
    "directories": {
      "output": "build"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://10.200.3.16:8081/download/"
      }
    ],
    "win": {
      "target": "nsis",
      "icon": "src/img/logo.ico",
      "signAndEditExecutable": true,
      "artifactName": "${productName}_setup_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "displayLanguageSelector": false,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "runAfterFinish": true,
      "installerIcon": "src/img/logo.ico",
      "uninstallerIcon": "src/img/logo.ico",
      "installerSidebar": "src/img/sidebar.bmp",
      "uninstallerSidebar": "src/img/sidebar.bmp",
      "installerHeader": "src/img/headerbar.bmp",
      "shortcutName": "一起作业阅卷客户端",
      "allowToChangeInstallationDirectory": true
    }
  },
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist-win": "electron-builder --win --ia32 --dir",
    "dist-nsis": "electron-builder --win --ia32 --pd='build/win-ia32-unpacked'",
    "package": "electron-packager ./ --platform=win32 --arch=ia32 --asar --overwrite --ignore=build/ --ignore=src/node_modules",
    "package-help": "electron-packager --help",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "17zuoye",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.1.1",
    "colors": "^1.3.0",
    "electron-log": "^2.2.15",
    "jquery": "^3.3.1",
    "node-cmd": "^3.0.0",
    "popper.js": "^1.14.3"
  },
  "devDependencies": {
    "Squirrel": "0.0.1",
    "asar": "^0.14.3",
    "bootstrap": "^4.1.1",
    "colors": "^1.3.0",
    "electron": "^2.0.2",
    "electron-builder": "^20.5.1",
    "electron-nsis": "0.0.1-alpha",
    "electron-package": "^0.1.0",
    "electron-packager": "^12.1.0",
    "electron-simple-updater": "^1.2.3",
    "electron-updater": "^2.21.10",
    "jquery": "^3.3.1",
    "node-cmd": "^3.0.0",
    "popper.js": "^1.14.3"
  }
}
